<div class="row">
  <div class="col-md-12">
    <h2>{{title}}</h2>
    <hr />

    {{#if data}}
    <div class="table-responsive">
      <table class="table table-bordered table-striped table-hover custom-table">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>ID</th>
            <th>Price</th>
            <th>Room Type</th>
            <th>Neighbourhood</th>
          </tr>
        </thead>
        <tbody>
          {{#each data}}
          <tr class="{{rowClass this.NAME}}">

            <td class="img-cell">
              <img
                src="{{this.thumbnail}}"
                class="img-thumb"
                alt="Listing"
                onerror="this.src='https://placehold.co/120x80?text=No+Image'"
              >
            </td>


            <td>{{this.NAME}}</td>

            <td>{{this.id}}</td>

            <td>{{this.price}}</td>

            <td>{{this.[room type]}}</td>

            <td>{{this.neighbourhood}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    {{else}}
      <div class="no-data">
        <strong>No Data Available</strong>
      </div>
    {{/if}}
  </div>
</div>
